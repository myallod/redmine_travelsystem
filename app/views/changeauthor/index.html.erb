<% if Setting['plugin_redmine_travelsystem']['ts_settings_changeauthor'] %>
<h2><%=h @issue["subject"].to_s %></h2>

<p><%=l(:label_authorchange) %>
	<em>
		<%= @issue_user["firstname"].to_s+" "+@issue_user["lastname"].to_s %>
	</em>
</p>
<%= form_for @issue, :url => { :action => "edit" } do |f| %> 
<p>
	<h3><%=l(:head_authorchange) %></h3>
	
	<%= hidden_field_tag "issue_id", +@issue["id"] %>
	
	<select id="edit-authorid" name="authorid">
    <%= options_from_collection_for_select(@users, :user_id, :name, @issue["author_id"]) %>
	</select>
</p>

<%= submit_tag(l(:button_save), :class => 'button-small')-%>

<% end %>
<% end %>
